<h2><%= @project.title %></h2>

<p><%= @project.description %></p>

<p>
  Tasks:
<ul>
  <% @project.tasks.each do |t| %>
    <li><%= t.title %>: <%= t.description %> (<%= link_to "Edit", "/tasks/#{t.id}/edit" %>  |  <%= link_to "Delete", "/tasks/#{t.id}", :method => :delete, :data => { :confirm => 'Are you sure you want to delete this task?' } %>)</li>
  <% end %>
    <li><%= link_to "Add task", "/tasks/new/#{@project.id}" %></li>
</ul>
</p>

<p>
  Members:
  <ul>
    <% @project.users.each do |u| %>
      <li><%= link_to u.username, user_path(u) %></li>
    <% end %>
  </ul>

<%= link_to "Edit project", edit_project_path %>
<%= link_to "Delete project", project_path, :method => :delete, :data => { :confirm => "Are you sure you want to delete: #{@project.title}?" } %>
